<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane id="AnchorPane" prefHeight="400" prefWidth="600" style="-fx-background-color: #87CEEB;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.teach.javafx.controller.base.LoginChooseController">


    <Label layoutX="252.0" layoutY="14.0" style="-fx-font-size: 24; -fx-font-weight: bold;" text="登录选项" />


    <!-- Admin Button -->
    <Button id="admin" layoutX="225.0" layoutY="68.0" minHeight="50" minWidth="150" onAction="#onAdminButtonClick" style="-fx-background-color: #6495ED; -fx-text-fill: white; -fx-font-size: 14;" text="管理员登录">
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor></Button>

    <!-- Student Button -->
    <Button id="student" layoutX="225.0" layoutY="149.0" minHeight="50" minWidth="150" onAction="#onStudentButtonClick" style="-fx-background-color: #6495ED; -fx-text-fill: white; -fx-font-size: 14;" text="学生登录">
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor></Button>

    <!-- Teacher Button -->
    <Button id="teacher" layoutX="225.0" layoutY="231.0" minHeight="50" minWidth="150" onAction="#onTeacherButtonClick" style="-fx-background-color: #6495ED; -fx-text-fill: white; -fx-font-size: 14;" text="教师登录">
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor></Button>

    <!-- Default Button -->
    <Button id="default" layoutX="225.0" layoutY="312.0" minHeight="50" minWidth="150" onAction="#onDefaultButtonClick" style="-fx-background-color: #6495ED; -fx-text-fill: white; -fx-font-size: 14;" text="账号密码登录">
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor></Button>
   <cursor>
      <Cursor fx:constant="DEFAULT" />
   </cursor>

</AnchorPane>
